# Server
PORT=3000
LOG_LEVEL=info

# Auth (comma-separated list of keys)
API_KEYS=NaJLmErAXgaUCTvYj4FKMaH8yy3Bkxdi

# Defaults for conversion
DEFAULT_QUALITY=80
DEFAULT_LOSSLESS=false
WEBP_EFFORT=4
